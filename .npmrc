# Use package lock for consistent installs
package-lock=true

# Skip optional dependencies
optional=false

# Increase network retry settings
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=15000
fetch-retry-maxtimeout=60000

# Production settings
production=true
save-exact=true

# New settings
legacy-peer-deps=true
strict-peer-dependencies=false
auto-install-peers=true
